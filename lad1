#include<stdio.h>
#include<conio.h>
void linear_search(int a[10],int n,int key)
{
int i,found=0;
for(i=0;i<n;i++)
{
if(key==a[i])
{
printf("\n%d found at a[%d]",key,i);
found=1;
break;
}
}
if(found==0)
printf("\n element not found in the list");
}
void binary_search(int a[], int n, int key, int first, int last)
{
if (first > last)
{
printf("\nElement not found in the list");
return;
}
int mid = (first + last) / 2;
if (key < a[mid])
binary_search(a, n, key, first, mid - 1);
else if (key > a[mid])
binary_search(a, n, key, mid + 1, last);
else
printf("\n%d found at a[%d]", key, mid);
}
void main()
{
int choice;
int a[10];
int n,key,last ,first,i;
clrscr();
printf("enter the no of array elements:");
scanf("%d",&n);
printf("\n enter the array elements:");
for(i=0;i<n;i++)
{
scanf("%d",&a[i]);
}
printf("\n enter the element to be searched: ");
scanf("%d",&key);
printf("\n 1. Linear search \n 2. Binary search");
printf("\n enter your choice:");
scanf("%d",&choice);
switch(choice)
{
case 1:
case 2:
linear_search(a,n,key);
break;
binary_search(a,n,key,0,n-1);
break;
}
getch();
}