#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
void insertion(int a[], int n)
{
int i, j, temp;
for(i = 1; i < n; i++)
{
temp = a[i];
for(j = i - 1; j >= 0 && a[j] > temp; j--)
{
a[j + 1] = a[j];
}
a[j + 1] = temp;
}
printf("\nSorted array in Ascending order:");
for(i = 0; i < n; i++)
printf(" %d", a[i]);
printf("\n");
}
{
void selection(int a[], int n)
int i, j, temp, min;
for(i = 0; i < n; i++)
{
min = i;
for(j = i + 1; j < n; j++)
{
if(a[j] < a[min])
min = j;
}
if(min != i)
{
temp = a[i];
a[i] = a[min];
a[min] = temp;
}
}
printf("\nSorted array in Descending order:");
for(i = n - 1; i >= 0; i--)
printf(" %d", a[i]);
printf("\n");
}
int main()
{
int a[10] = {75, 8, 1, 16, 48, 3, 7, 0};
int n = 8;
int choice;
clrscr();
while(1)
{
printf("\nOriginal array:");
for(int i = 0; i < n; i++)
printf(" %d", a[i]);
printf("\n\n1. Insertion Sort\n2. Selection Sort\n3. Exit");
printf("\nEnter your choice: ");
scanf("%d", &choice);
switch(choice)
{
case 1: insertion(a, n); break;
case 2: selection(a, n); break;
case 3: exit(0);
default: printf("\nInvalid choice\n");
}
}
return 0;
}